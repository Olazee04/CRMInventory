@model List<MetExpense>

<div class="container mt-4">
    <h2 class="text-center mb-4">M.E.T Expenses</h2>

    <a asp-action="CreateEditExpense" class="btn btn-primary mb-3">➕ Add New Expense</a>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Value (₦)</th>
                <th>User</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Description</td>
                    <td>@item.Quantity</td>
                    <td>@item.Value</td>
                    <td>@item.User?.Name</td>
                    <td>
                        <a asp-action="CreateEditExpense" asp-route-id="@item.Id" class="btn btn-sm btn-warning">✏️ Edit</a>
                        <a asp-action="DeleteMetExpense" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑 Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>