@{
    ViewData["Title"] = "View / Create / Edit";
}

@model CrmInventory.Models.MetExpense

<div class="text-center">
    <h1 class="display-4"> View, Create or Edit an Expense </h1>
    
</div>

<form asp-action="CreateEditExpenseForm">

    <label>Id</label>
    <input hidden class="form-control" type="number" placeholder="0" asp-for="Id" />
   
    <label class="mt-4">Description</label>
    <input class="form-control" type="text" placeholder="add  descripton" asp-for="Description" />

    <label> Quantity</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Quantity" />

    <label class="mt-4"> Value ₦</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Value" step="0.01" />

    <button class="btn btn-primary mt-4" type="submit">Ok</button>
</form>
