@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">📊 CRM Dashboard</h2>

    <div class="row text-center mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5>Total Users</h5>
                    <h3>@ViewBag.TotalUsers</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5>Total Expenses</h5>
                    <h3>₦@String.Format("{0:N0}", ViewBag.TotalExpenses)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3">
                <div class="card-body">
                    <h5>Highest Expense</h5>
                    <h3>₦@String.Format("{0:N0}", ViewBag.HighestExpense)</h3>
                </div>
            </div>
        </div>
    </div>

    <h4 class="mb-3">🕐 Latest 5 Expenses</h4>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Description</th>
                <th>Value (₦)</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.LatestExpenses)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Description</td>
                    <td>₦@String.Format("{0:N0}", item.Value)</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="mt-5 mb-3">👤 User Expense Breakdown</h4>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>User</th>
                <th>Total Expense (₦)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in ViewBag.UserTotals)
            {
                <tr>
                    <td>@u.UserName</td>
                    <td>₦@String.Format("{0:N0}", u.Total)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
