@model List<CrmInventory.Models.User>

@{
    ViewData["Title"] = "User List";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Registered Users</h2>

    <!-- Top controls -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="text-muted mb-0">
            Below is the list of all registered users in the CRM Inventory system.
            You can update their details, remove users, or view a breakdown of all expenses attached to each individual.
        </p>

        <a asp-action="Create" class="btn btn-primary shadow-sm">
            + Add New User
        </a>
    </div>

    <!-- User Table -->
    <table class="table table-bordered table-striped table-hover text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Address</th>
                <th>Profession</th>
                <th>Total Expenses</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="7" class="text-muted py-3">
                        No users found. Click "Add New User" to register someone.
                    </td>
                </tr>
            }
            else
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserId</td>
                        <td>@user.Name</td>
                        <td>@user.Age</td>
                        <td>@user.Address</td>
                        <td>@user.Profession</td>

                        <!-- Total Expenses (optional enhancement if you preload totals) -->
                        <td>
                            @if (user.MetExpenses != null && user.MetExpenses.Any())
                            {
                                <span class="fw-bold text-success">
                                    ₦@user.MetExpenses.Sum(e => e.Value)
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">No expenses</span>
                            }
                        </td>

                        <td class="text-nowrap">

                            <!-- View Expenses Button -->
                            <a asp-action="UserExpenses"
                               asp-route-id="@user.UserId"
                               class="btn btn-info btn-sm me-1">
                                📊 View Expenses
                            </a>

                            <!-- Edit Button -->
                            <a asp-action="Edit"
                               asp-route-id="@user.UserId"
                               class="btn btn-warning btn-sm me-1">
                                ✏ Edit
                            </a>

                            <!-- Delete Button -->
                            <a asp-action="Delete"
                               asp-route-id="@user.UserId"
                               class="btn btn-danger btn-sm">
                                🗑 Delete
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="mt-3 text-muted small">
        Tip: Click the <strong>"View Expenses"</strong> button beside each user to see all their associated expenses, including descriptions, quantities, amounts, and dates.
    </div>
</div>