@model List<CrmInventory.Models.User>

@{
    ViewData["Title"] = "User List";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Registered Users</h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">+ Add New User</a>
    </div>

    <table class="table table-bordered table-striped text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Address</th>
                <th>Profession</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="6" class="text-muted">No users found.</td>
                </tr>
            }
            else
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserId</td>
                        <td>@user.Name</td>
                        <td>@user.Age</td>
                        <td>@user.Address</td>
                        <td>@user.Profession</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
