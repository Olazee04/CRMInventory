@model List<CrmInventory.Models.User>

@{
    ViewData["Title"] = "User List";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Registered Users</h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">+ Add New User</a>
    </div>

    <table class="table table-bordered table-striped text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Address</th>
                <th>Profession</th>
                <th>Total Expenses</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="7" class="text-muted py-3">No users found.</td>
                </tr>
            }
            else
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserId</td>
                        <td>@user.Name</td>
                        <td>@user.Age</td>
                        <td>@user.Address</td>
                        <td>@user.Profession</td>

                        <!-- TOTAL EXPENSES + TOOLTIP USING CREATEDAT -->
                        <td>
                            @if (user.MetExpenses != null && user.MetExpenses.Any())
                            {
                                var total = user.MetExpenses.Sum(e => e.Value);
                                var firstDate = user.MetExpenses.Min(e => e.CreatedAt).ToString("dd/MM/yyyy");
                                var lastDate = user.MetExpenses.Max(e => e.CreatedAt).ToString("dd/MM/yyyy");
                                var count = user.MetExpenses.Count();

                                <span class="fw-bold text-success"
                                      title="Total: ₦@total
First Expense: @firstDate
Last Expense: @lastDate
Total Records: @count">
                                    ₦@total
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">No expenses</span>
                            }
                        </td>

                        <td>
                            <a asp-action="UserExpenses" asp-route-id="@user.UserId" class="btn btn-info btn-sm">View Expenses</a>
                            <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>